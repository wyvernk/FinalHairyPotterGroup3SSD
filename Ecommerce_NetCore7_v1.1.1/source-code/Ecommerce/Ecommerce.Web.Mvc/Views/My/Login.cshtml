@model LoginUserDto

@{
    ViewData["Title"] = "Login";
    Layout = LayoutPage.CleanLayout;
    AdvancedConfigurationDto conAdv = JsonSerializer.Deserialize<AdvancedConfigurationDto>(K["AdvancedConfiguration"])!;
}



<div class="top-header">
    <div class="container-fluid ">
        <div class="d-flex justify-content-between">
            <button onclick="history.back()" class="btn btn-light btn-sm rounded-2 bg-soft-grass-2"><i class="fa-solid fa-arrow-left"></i></button>
            <a href="/" class="btn btn-light btn-sm rounded-2 bg-soft-grass-2"><i class="fas fa-home"></i></a>
        </div>
    </div>
    <div class="container">
        <div class="page-title">
            <span>Sign In</span>
        </div>
    </div>
</div>
<div class="container">
    <div class="p-4 content-section">
        <div class="row g-0">
            <div class="col-md-6">
                <div class="right-side-content">
                    <img src="/assets/images/signin-10.jpg" class="img-fluid">
                </div>
            </div>
            <div class="col-md-6">
                <div class="h-100 d-flex justify-content-center align-items-center">
                    <div class="mw-400">
                        <div class="py-4 px-3">
                            <form asp-controller="My" asp-action="Login" method="post" asp-route-returnUrl="@ViewData["ReturnUrl"]">
                                <div class="row g-2 mt-1">
                                    <div class="col-12 mt-2">
                                        <label for="username" class="form-label">Username</label>
                                        <input type="text" class="form-control" id="username" name="UserName" value="@Model.UserName" required pattern="^[a-zA-Z0-9\s.,!?_]*$" title="Only alphanumeric characters, spaces, '.', ',', '!', '?', and '_' are allowed." autofocus>
                                        <span asp-validation-for="UserName" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 mt-2">
                                        <label for="password" class="form-label">Password</label>
                                        <input type="password" class="form-control" id="password" name="Password" required pattern=".*" title="Enter your password.">
                                        <span asp-validation-for="Password" class="text-danger"></span>
                                    </div>
                                    <div class="col-12 mt-2">
                                        <div class="form-check">
                                                <input class="form-check-input" type="checkbox" id="rememberMe" name="RememberMe" value="true" checked="@Model.RememberMe">
                                                <input type="hidden" name="RememberMe" value="false">

                                                Remember Me
                                            </label>
                                        </div>
                                    </div>
                                </div>
                                <div class="row mt-2">
                                    <div class="col-md-12">
                                        <button class="btn btn-grass-2 w-100 signup-button" type="submit">Sign In</button>
                                    </div>
                                </div>
                                <div class="mt-3">
                                    <small>
                                        <span>Don't have an account?</span> <a class="text-sky text-decoration-none" asp-controller="My" asp-action="Register">Sign Up</a>
                                    </small>
                                </div>
                                @if (conAdv?.ActiveResetPassword == true)
                                {
                                    <div>
                                        <small>
                                            <a class="text-sky text-decoration-none" href="/forgotpassword">Forgot password? <i class="fa-solid fa-arrow-up-right-from-square"></i></a>
                                        </small>
                                    </div>
                                }
                                <div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>