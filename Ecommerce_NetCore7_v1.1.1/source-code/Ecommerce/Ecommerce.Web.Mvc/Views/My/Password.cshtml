@model EditPasswordDto


@{
    ViewData["Title"] = "Password Update";
    Layout = LayoutPage.ShopLayout;
    var customerReviews = ViewBag.CustomerReviews as List<ProductReviewDto>;
    GeneralConfigurationDto conGen = JsonSerializer.Deserialize<GeneralConfigurationDto>(K["GeneralConfiguration"])!;
}

<div class="top-header">
    <div class="container">
        <div class="page-title">
            <span>Account</span>
        </div>
    </div>
</div>
<div class="container">
    <div class="p-4 content-section customer-profile">
        <div class="column">
            <div class="col-md-4">
                <partial name="_CustomerAccountTab" />
            </div>
            <div class="col-md-8">
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade bg-white show active p-2">
                        <h5 class="mb-3 text-uppercase fw-bold">Password<span class="d-block" style="font-size: 13px !important;font-weight: normal;text-transform: capitalize;">Update Your Password</span></h5>
                        <div>
                            <form class="form" asp-action="Password" enctype="multipart/form-data" method="post">
                                <div class="row">
                                    <div class="col-12 col-sm-6">
                                        <div class="row">
                                            <div class="col">
                                                <div class="mb-3">
                                                    <label>Current Password</label>
                                                    <input class="form-control" asp-for="OldPassword" type="password" autocomplete="new-password">
                                                    <span asp-validation-for="OldPassword"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <div class="mb-3">
                                                    <label>New Password</label>
                                                    <input class="form-control" asp-for="NewPassword" type="password" autocomplete="new-password">
                                                    <span asp-validation-for="NewPassword"></span>
                                                </div>
                                            </div>
                                        </div>
                                        <div class="row">
                                            <div class="col">
                                                <div class="mb-3">
                                                    <label>Confirm <span class="d-none d-xl-inline">Password</span></label>
                                                    <input class="form-control" asp-for="ConfirmNewPassword" type="password" autocomplete="new-password">
                                                    <span asp-validation-for="ConfirmNewPassword"></span>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                                <div class="d-grid gap-2 d-sm-block">
                                    <button type="submit" class="btn btn-sky px-5">Update</button>
                                </div>
                                <div>
                                    <div asp-validation-summary="All" class="text-danger"></div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts{
    <script src="~/others/js/customer-account.js"></script>
}
