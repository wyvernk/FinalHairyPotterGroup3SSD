@{
    ViewData["Title"] = "Dashboard";
    Layout = LayoutPage.ShopLayout;
    var currentUser = ViewBag.CurrentUser as UserDto;
    var customerInfo = ViewBag.CustomerInfo as CustomerDto;
}

<div class="top-header">
    <div class="container">
        <div class="page-title">
            <span>Account</span>
        </div>
    </div>
</div>
<div class="container">
    <div class="p-4 content-section customer-profile">
        <div class="column">
            <div class="col-md-4">
                <!-- Tabs nav -->
                <partial name="_CustomerAccountTab" />
            </div>
            <div class="col-md-8">
                <!-- Tabs content -->
                <div class="tab-content" id="v-pills-tabContent">
                    <div class="tab-pane fade bg-white show active p-2">
                        <h5 class="mb-3 text-uppercase fw-bold">Dashboards</h5>
                        <div class="row">
                            <div class="col-6 col-lg-3 col-md-4">
                                <a asp-controller="My" asp-action="Orders">
                                    <div class="border-radius-0 border my-2 text-center text-dark scale-item">
                                        <div class="height-120 p-3">
                                            <i class="fa-solid fa-3x fa-box"></i>
                                        </div>
                                        <div class="w-100 p-2">
                                            <div class="d-block fw-600 text-uppercase">Orders</div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-6 col-lg-3 col-md-4">
                                <a asp-controller="My" asp-action="Reviews">
                                    <div class="border-radius-0 border my-2 text-center text-dark scale-item">
                                        <div class="height-120 p-3">
                                            <i class="fa-solid fa-3x fa-star"></i>
                                        </div>
                                        <div class="w-100 p-2">
                                            <div class="d-block fw-600 text-uppercase">Reviews</div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-6 col-lg-3 col-md-4">
                                <a asp-controller="My" asp-action="WishList">
                                    <div class="border-radius-0 border my-2 text-center text-dark scale-item">
                                        <div class="height-120 p-3">
                                            <i class="fa-solid fa-3x fa-heart"></i>
                                        </div>
                                        <div class="w-100 p-2">
                                            <div class="d-block fw-600 text-uppercase">Wishlist</div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-6 col-lg-3 col-md-4">
                                <a asp-controller="My" asp-action="Address">
                                    <div class="border-radius-0 border my-2 text-center text-dark scale-item">
                                        <div class="height-120 p-3">
                                            <i class="fa-solid fa-3x fa-location-dot"></i>
                                        </div>
                                        <div class="w-100 p-2">
                                            <div class="d-block fw-600 text-uppercase">Address</div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-6 col-lg-3 col-md-4">
                                <a asp-controller="My" asp-action="AccountInfo">
                                    <div class="border-radius-0 border my-2 text-center text-dark scale-item">
                                        <div class="height-120 p-3">
                                            <i class="fa-solid fa-3x fa-user-gear"></i>
                                        </div>
                                        <div class="w-100 p-2">
                                            <div class="d-block fw-600 text-uppercase">Account Info</div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-6 col-lg-3 col-md-4">
                                <a asp-controller="My" asp-action="Password">
                                    <div class="border-radius-0 border my-2 text-center text-dark scale-item">
                                        <div class="height-120 p-3">
                                            <i class="fa-solid fa-3x fa-key"></i>
                                        </div>
                                        <div class="w-100 p-2">
                                            <div class="d-block fw-600 text-uppercase">Password</div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                            <div class="col-6 col-lg-3 col-md-4">
                                <a asp-controller="Account" asp-action="Logout">
                                    <div class="border-radius-0 border my-2 text-center text-dark scale-item">
                                        <div class="height-120 p-3">
                                            <i class="fa-solid fa-3x fa-sign-out-alt"></i>
                                        </div>
                                        <div class="w-100 p-2">
                                            <div class="d-block fw-600 text-uppercase">Log Out</div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script src="~/others/js/customer-account.js"></script>
}
