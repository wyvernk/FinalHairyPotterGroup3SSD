@model TwoStepDto

@{
    Layout = LayoutPage.CleanLayout;
    ViewData["Title"] = "Two Factor Authentication";
}

@section Styles{
<style>
    html,
    body {
        height: 100% !important;
    }

    body {
        display: -ms-flexbox;
        display: flex;
        -ms-flex-align: center;
        align-items: center;
        padding-top: 40px;
        padding-bottom: 40px;
        background-color: #f5f5f5;
    }

    .form-signin {
        width: 100%;
        max-width: 420px;
        padding: 15px 35px;
        margin: auto;
    }

        .form-signin img {
            max-height: 60px;
        }

    .el-radio > input[type="radio"] + .el-radio-style:before, .el-checkbox > input[type="checkbox"] + .el-checkbox-style:before, input, .input-group-text {
        background: #fff;
        border: 1px solid #e4e6ef;
    }

    .input-code {
        padding: inherit !important;
        font-size: 2.2em;
        text-align: center;
        height: calc(3rem + 2px);
        font-weight: bold;
    }
</style>
}


<div style="margin:0 auto;">
    <div class="text-center">
        <span class="d-block mb-2" style="font-size: 1.5em;font-weight: bolder; color: #0dcaf0;">Two-Step Verification</span>
    </div>
    <div class="text-center" style="max-height: 400px">
        <img src="~/assets/svg/mobile-login-bro.svg" class="img-fluid" />
    </div>
    <form class="form-signin" asp-action="LoginTwoStep" asp-controller="Account" method="post" class="validation-tooltip">
        <div class="help-block text-center mb-2">
            Enter two-step code received by Email
        </div>
        <input type="text" class="form-control" asp-for="ReturnUrl" hidden>
        <input type="text" class="form-control" asp-for="RememberMe" hidden>
        <input type="text" class="form-control" asp-for="UserName" hidden>
        <div class="form-floating mb-2">
            <input type="text" class="form-control input-code" asp-for="TwoFactorCode" autofocus="">
            <span asp-validation-for="TwoFactorCode"></span>
        </div>

        <div class="d-grid gap-2">
            <button class="btn btn-primary text-uppercase" type="submit">Verify</button>
        </div>
        <div>
            <div asp-validation-summary="All" class="text-danger"></div>
        </div>
        <div class="text-center">
            <a href="/">Back to Home</a>
        </div>
    </form>

</div>