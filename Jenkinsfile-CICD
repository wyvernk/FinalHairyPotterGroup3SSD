    stage("Deploy to Production Checkpoint") {
      steps {
        withCredentials(([string(credentialsId: 'Cred-TelegramBot', variable: 'TOKEN'),
          string(credentialsId: 'Cred-TelegramChatID', variable: 'CHAT_ID')])) {
